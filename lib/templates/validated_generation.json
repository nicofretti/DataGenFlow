{
  "name": "Validated Text Generation",
  "description": "Generate text with LLM and validate the output",
  "blocks": [
    {
      "type": "LLMBlock",
      "config": {
        "temperature": 0.7,
        "max_tokens": 2048
      }
    },
    {
      "type": "ValidatorBlock",
      "config": {
        "min_length": 10,
        "max_length": 10000
      }
    }
  ]
}
